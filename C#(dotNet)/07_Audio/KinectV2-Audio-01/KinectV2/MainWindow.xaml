<Window x:Class="KinectV2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinect for Windows SDK v2" SizeToContent="WidthAndHeight"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        >
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Content="録音開始" Margin="10" Click="Button_Click"/>
            <Button Content="録音停止" Margin="10" Click="Button_Click_1"/>
            <Button Content="再生" Margin="10" Click="Button_Click_2"/>
            <MediaElement x:Name="MediaWave" LoadedBehavior="Manual"/>
        </StackPanel>
    </Grid>
</Window>
